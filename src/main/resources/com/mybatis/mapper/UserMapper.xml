<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mybatis.mapper.UserMapper">
    <select id="selectAll" resultType="USERDto">
        SELECT * FROM user
    </select>

    <insert id="insertUser" parameterType="com.mybatis.dto.UserCreateDto" useGeneratedKeys="true" keyProperty="user_id">
        INSERT INTO user(name, age, job, sex, pet)
        values( #{name}, #{age}, #{job}, #{sex}, #{pet, typeHandler=org.apache.ibatis.type.EnumTypeHandler});
    </insert >
</mapper>
