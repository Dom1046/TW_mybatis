<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- 콘솔에 로그 출력 -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout charset="UTF-8" pattern="[%d{yyyy-MM-dd HH:mm:ss}] %-5p %c{1} - %m%n"/>
        </Console>

        <!-- 로그 파일 저장 / 절대 경로로 할 것-->
        <RollingFile name="FileAppender" fileName="C:/webserver/webserber3/logs/application.log"
                     filePattern="C:/webserver/webserber3/logs/application-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout charset="UTF-8">
                <Pattern>[%d{yyyy-MM-dd HH:mm:ss}] %-5p %c{1} - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- 패키지별 로그 수준 설정 -->
        <Logger name="com.example" level="DEBUG" additivity="false">
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- 전체 애플리케이션 로그 -->
        <Root level="DEBUG">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>
